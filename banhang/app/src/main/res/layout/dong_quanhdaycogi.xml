<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="10dp"
    android:background="#F1F1F1">

    <LinearLayout
        android:id="@+id/linearlayoutcardviewQuanhDayCoGi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/imageviewQuanhDayCoGi"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/liewChuDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenQuanhDayCoGi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxWidth="250dp"

                android:text="ngay xuan long phung xum vaaaaaaay"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtMoTaQuanhDayCoGi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxWidth="130dp"
                android:maxLines="1"
                android:text="ngay xua444444444444444444444444444444444"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>